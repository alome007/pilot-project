{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}